{{> sidebar}}
<div class="flex flex-col py-12 lg:flex-row lg:justify-around">
<div class="px-8 lg:w-1/2 bg-indigo-900 text-gray-500">
  <div class="py-4">
    <p class="font-bold text-white">Current Review:
    </p>
  </div>
  <div class="flex flex-col border-2 border-indigo-500 justify-around text-white">
    <div class="w-full px-6 divide-y flex flex-col items-stretch justify-end">
      <div class="py-4 w-fit-content">
        {{title}}
      </div>
      <div class="py-4 w-fit-content">
        {{service.service_name}}

      </div>
      <div class="py-4 w-full whitespace-normal">
        {{review_text}}
      </div>

    </div>
    <div class="p-4 w-full">
      <button
        class="delete-review-btn w-full bg-red-500 hover:bg-red-700 text-white font-bold my-4 py-2 px-4 rounded focus:outline-none focus:shadow-outline"
        type="submit">
        Delete
      </button>
    </div>
  </div>
</div>

<form class="edit-review-form lg:w-1/2 bg-white shadow-md rounded px-8 py-4 pb-8">
  <div class="mb-4">
    <label class="block text-gray-700 text-sm font-bold mb-2" for="review-title">
      Edit Title
    </label>
    <input
      class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
      name="edit-title" id="edit-title" type="text" value="{{title}}">
  </div>
  <div class="mb-6">
    <label class="block text-gray-700 text-sm font-bold mb-2" for="media-service">
      Which streaming service:
    </label>
    <select id="edit-service"
      class="shadow appearance-none border border-grey-500 rounded w-full py-2 px-3 text-gray-700 mb-3 leading-tight focus:outline-none focus:shadow-outline">
      <option>Select one...</option>
      <option class="media_selection" value="1">Apple TV+</option>
      <option class="media_selection" value="2">Peacock</option>
      <option class="media_selection" value="3">Hulu</option>
      <option class="media_selection" value="4">Netflix</option>
      <option class="media_selection" value="5">HBO Max</option>
    </select>
  </div>
  <div class="mb-6">
    <label class="block text-gray-700 text-sm font-bold mb-2" for="edit-text">
      Edit review:
    </label>
    <textarea
      class="shadow appearance-none border border-grey-500 rounded w-full py-2 px-3 text-gray-700 mb-3 leading-tight focus:outline-none focus:shadow-outline"
      id="edit-text" type="text">{{review_text}}</textarea>
  </div>
  <div class="flex items-center justify-between">
    <button id="edit-reviews-btn"
      class="bg-indigo-600 hover:bg-indigo-900 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline"
      type="submit">
      Submit Updated Review
    </button>
  </div>
</form>
</div>
<div>

</div>
  <script src="/javascript/edit-review.js"></script>
  <script src="/javascript/delete-review.js"></script>
{{>sidebar}}
<div class="flex-1 overflow-x-hidden overflow-y-auto bg-gray-200">
<div class="flex flex-col mt-8">
  <div class="-my-2 py-2 overflow-x-auto sm:-mx-6 sm:px-6 lg:-mx-8 lg:px-8">
    <div class="align-middle inline-block min-w-full shadow overflow-hidden sm:rounded-lg border-b border-gray-200">
      <div class ="h-1/2 bg-indigo-600 px-8 py-4">
        <h2 class="text-white font-bold">Add a New Review</h2>
      </div>

      <div class="w-full">
  <form class="new-review-form bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
    <div class="mb-4">
      <label class="block text-gray-700 text-sm font-bold mb-2" for="review-title">
        What movie or show are you reviewing?
      </label>
      <input class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" name="review-title" id="review-title" type="text" placeholder="Title of show/movie">
    </div>
    <div class="mb-6">
      <label class="block text-gray-700 text-sm font-bold mb-2" for="media-service">
        Select a streaming service:
      </label>
          <select id="media-service" class="shadow appearance-none border border-grey-500 rounded w-full py-2 px-3 text-gray-700 mb-3 leading-tight focus:outline-none focus:shadow-outline">
                        <option value>Select one...</option>
                        <option class="media_selection" value="1">Apple TV+</option>
                        <option class="media_selection" value="2">Peacock</option>
                        <option class="media_selection" value="3">Hulu</option>
                        <option class="media_selection" value="4">Netflix</option>
                        <option class="media_selection" value="5">HBO Max</option>
                    </select>
    </div>
    <div class="mb-6">
      <label class="block text-gray-700 text-sm font-bold mb-2" for="review text">
        Enter your review:
      </label>
      <textarea class="shadow appearance-none border border-grey-500 rounded w-full py-2 px-3 text-gray-700 mb-3 leading-tight focus:outline-none focus:shadow-outline" id="review-text" type="text" placeholder="Type your review here."></textarea>
    </div>
    <div class="flex items-center justify-between">
      <button class="bg-indigo-500 hover:bg-indigo-900 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" type="submit">
        Submit
      </button>
    </div>
  </form>
</div>
                 

  
    <div class ="mt-16 h-1/2 bg-gray-700 py-4 px-6">
        <h2 class="text-white font-bold">Your Current Reviews</h2>
      
                        <div class="flex flex-col mt-8">
                            <div class="-my-2 py-2 overflow-x-auto sm:-mx-6 sm:px-6 lg:-mx-8 lg:px-8">
                                <div
                                    class="align-middle inline-block min-w-full shadow overflow-hidden sm:rounded-lg border-b border-gray-200">
                                    <table class="min-w-full">
                                        <thead>
                                            <tr>
                                                <th
                                                    class="px-6 py-3 border-b border-gray-200 bg-gray-50 text-left text-xs leading-4 font-medium text-gray-500 uppercase tracking-wider">
                                                    Title</th>
                                                <th
                                                    class="px-6 py-3 border-b border-gray-200 bg-gray-50 text-left text-xs leading-4 font-medium text-gray-500 uppercase tracking-wider">
                                                    Streaming Service</th>
                                                <th
                                                    class="px-6 py-3 border-b border-gray-200 bg-gray-50 text-left text-xs leading-4 font-medium text-gray-500 uppercase tracking-wider">
                                                    Review
                                                    <!--may be able to preview content here, create get route for single review, possible comments? -->
                                                </th>
                                                <th
                                                    class="px-6 py-3 border-b border-gray-200 bg-gray-50 text-left text-xs leading-4 font-medium text-gray-500 uppercase tracking-wider">
                                                    Edit</th>
                                            </tr>
                                        </thead>
                                        <tbody class="bg-white">
          {{#each reviews as |review|}}
          {{> review-info review}}            
          {{/each}}
      </tbody>
                                    </table>
                                    </div>
       </div>
    </div>
  </div>
</div>

<script src="/javascript/add-review.js"></script>

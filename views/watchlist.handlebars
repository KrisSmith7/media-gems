{{> sidebar}}
<div class="flex-1 overflow-x-hidden overflow-y-auto bg-gray-200">
    <div class="container mx-auto px-6 py-8">
    <h3 class="text-gray-700 text-3xl font-medium">My Watchlist</h3>
    


<div class="flex flex-col mt-8">
    <div class="-my-2 py-2 overflow-x-auto sm:-mx-6 sm:px-6 lg:-mx-8 lg:px-8">
        <div class="align-middle inline-block min-w-full shadow overflow-hidden sm:rounded-lg border-b border-gray-200">
            <table class="min-w-full">
                <thead>
                    <tr>
                        <th
                            class="px-6 py-3 border-b border-gray-200 bg-gray-50 text-left text-xs leading-4 font-medium text-gray-500 uppercase tracking-wider">
                            Title</th>
                        <th
                            class="px-6 py-3 border-b border-gray-200 bg-gray-50 text-left text-xs leading-4 font-medium text-gray-500 uppercase tracking-wider">
                            Streaming Service</th>
                        <th
                            class="px-6 py-3 border-b border-gray-200 bg-gray-50 text-left text-xs leading-4 font-medium text-gray-500 uppercase tracking-wider">
                            Post a Review
                        </th>
                        <th
                            class="px-6 py-3 border-b border-gray-200 bg-gray-50 text-xs leading-4 font-medium text-gray-500 uppercase tracking-wider">
                            Delete from Watchlist</th>
                    </tr>
                </thead>
                <tbody class="bg-white">

                    {{#each listOptions as |listOption|}}
                    {{> watchlist-info listOption}}
                    {{/each}}



                </tbody>
            </table>
        </div>
    </div>
</div>
</div>
</div>
</div>

<script src="/javascript/delete-watchlist.js"></script>